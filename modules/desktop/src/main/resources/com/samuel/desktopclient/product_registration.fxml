<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="com.samuel.desktopclient.ProductRegistrationForm"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
        <ColumnConstraints minWidth="80" prefWidth="80"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <Label text="Cadastro de Produtos" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="Codigo de Barras : " GridPane.columnIndex="0"
           GridPane.rowIndex="1" >
    </Label>
    <TextField fx:id="barcodeField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="releaseField" prefHeight="40"
               GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="Nome : " GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Label>
    <TextField fx:id="nameField" prefHeight="40" disable="true"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Descricao : " GridPane.columnIndex="0"
           GridPane.rowIndex="3" >
    </Label>
    <TextField fx:id="descriptionField" prefHeight="40" disable="true"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Preco : " GridPane.columnIndex="0"
           GridPane.rowIndex="4" >
    </Label>
    <TextField fx:id="priceField" prefHeight="40" disable="true"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Button fx:id="submitButton" text="Confirmar"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="3" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handleSubmitButtonAction">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>