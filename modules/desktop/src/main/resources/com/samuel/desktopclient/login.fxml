<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="com.samuel.desktopclient.LoginFormController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <Label text="Login" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label fx:id="header" layoutX="48.0" layoutY="82.0"
           text="Please login with your credentials:" textFill="GREY"
           GridPane.rowIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>
    <Label text="CPF : " GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Label>
    <TextField fx:id="cpfField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password : " GridPane.columnIndex="0"
           GridPane.rowIndex="3" >
    </Label>
    <PasswordField fx:id="passwordField" prefHeight="40"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>


    <Button fx:id="submitButton" text="Login"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT"
            onAction="#handleSubmitButtonAction">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>